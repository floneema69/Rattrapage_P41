@model Cars.WebUI.ViewModel.VehiculesViewModels.CreateVehiculeViewModel

<h2>Créer un véhicule</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Vehicule.Nom"></label>
        <input asp-for="Vehicule.Nom" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicule.Marque"></label>
        <input asp-for="Vehicule.Marque" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicule.Modele"></label>
        <input asp-for="Vehicule.Modele" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicule.Immatriculation"></label>
        <input asp-for="Vehicule.Immatriculation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicule.Statut"></label>
        <input asp-for="Vehicule.Statut" type="checkbox" class="form-check-input" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicule.Description"></label>
        <textarea asp-for="Vehicule.Description" class="form-control"></textarea>
    </div>
    <input type="hidden" asp-for="Vehicule.EntrepriseID" />
    <button type="submit" class="btn btn-primary">Create</button>
    <partial name="_ValidationScriptsPartial"/>
</form>