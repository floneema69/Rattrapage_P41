@model Cars.WebUI.ViewModel.EntrepriseViewModels.EditEntrepriseViewModel

<h2>Edit Entreprise</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Contrat Actif</label>
        <div class="form-check">
            <input asp-for="ContratActif" class="form-check-input" type="radio" value="true" id="contratActifYes" />
            <label class="form-check-label" for="contratActifYes">Oui</label>
        </div>
        <div class="form-check">
            <input asp-for="ContratActif" class="form-check-input" type="radio" value="false" id="contratActifNo" />
            <label class="form-check-label" for="contratActifNo">Non</label>
        </div>
        <span asp-validation-for="ContratActif" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="EntrepriseId" />
    <button type="submit" class="btn btn-primary">Save</button>
    <partial name="_ValidationScriptsPartial"/>
</form>